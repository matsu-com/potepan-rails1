<h3>スケジュール詳細</h3>

<table>
  <tr>
    <th>ID</th>
    <td><%= @post.id %></td>
  </tr>
  <tr>
    <th>タイトル</th>
    <td><%= @post.title %></td>
  </tr>
  <tr>
    <th>開始日</th>
    <td><%= @post.start_day.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>投稿日時</th>
    <td><%= @post.updated_at.to_s(:datetime_jp) %></td>
  </tr>
  <tr>
    <th>終日</th>
    <td><%= @post.all_day %></td>
  </tr>
  <tr>
    <th>メモ</th>
    <td><%= @post.memo %></td>
  </tr>
</table>
<div>
  <ul>
    <li><%= link_to "スケジュール一覧に戻る", posts_path %></li>
    <li><%= link_to "スケジュールを編集する", edit_post_path %></li>
    <li><%= link_to "スケジュールを削除する", "#{@post.id}", method: :delete, data: {confirm: "削除しますか？"} %></li>
  </ul>
</div>
